<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/slide_welcome" />

    <TextView
        android:id="@+id/heading_slideScreen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Journey till the professional Developer"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_slideScreen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_slideScreen1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="35dp"
        android:text="@string/description_slideScreen1"
        android:textColor="#A8A9B2"
        android:textSize="16sp" />
</RelativeLayout>